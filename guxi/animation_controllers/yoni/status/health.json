    "controller.animation.yoni.status.health": {
      "initial_state": "default",
      "states": {
        "default": {
          "transitions": [
            {
              "raise16": "query.scoreboard('health') - query.health <= -16"
            },
            {
              "drop16": "query.scoreboard('health') - query.health >= 16"
            },
            {
              "raise8": "query.scoreboard('health') - query.health <= -8"
            },
            {
              "drop8": "query.scoreboard('health') - query.health >= 8"
            },
            {
              "raise4": "query.scoreboard('health') - query.health <= -4"
            },
            {
              "drop4": "query.scoreboard('health') - query.health >= 4"
            },
            {
              "raise2": "query.scoreboard('health') - query.health <= -2"
            },
            {
              "drop2": "query.scoreboard('health') - query.health >= 2"
            },
            {
              "raise1": "query.scoreboard('health') - query.health <= -1"
            },
            {
              "drop1": "query.scoreboard('health') - query.health >= 1"
            }
          ]
        },
        "raise16": {
          "on_entry": [
            "/scoreboard players add @s health 16"
          ],
          "transitions": [
            {
              "default": "(1.0)"
            }
          ]
        },
        "drop16": {
          "on_entry": [

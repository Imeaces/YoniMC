  /* 获取生命值的控制器（0-40的准确值可以在一刻之内获取）
  以下是一个使用示例
  {
    "animations": {
      //获取生命值的控制器（0-40的值可以在一刻之内获取）
      "health": "controller.animation.yoni.status.health",
      "health1": "controller.animation.yoni.status.health1",
      "health2": "controller.animation.yoni.status.health2",
      "health3": "controller.animation.yoni.status.health3",
      "health4": "controller.animation.yoni.status.health4"
    },
    "scripts": {
      "animate": [
        //运行获取生命值的控制器
        "health",
        "health1",
        "health2",
        "health3",
        "health4"
      ]
    }
  }
  */
  "format_version": "1.10.0",

//bridge-file-version: #0
{
  "format_version": "1.10.0",
  "animation_controllers": {
    "controller.animation.ability_mayfly": {
      "initial_state": "mode",
      "states": {
        "mode": {
          "on_entry": [
            "/tag @s add yoni:test_can_fly"
          ],
          "transitions": [
            {
              "cannot_fly": "query.skin_id == 32"
            },
            {
              "can_fly": "query.skin_id == 31"
            }
          ],
          "on_exit": [
            "@s yoni:reset_id",
            "/tag @s remove yoni:test_can_fly"
          ]
        },
        "cannot_fly": {
          "on_entry": [
            "/execute @s[tag=ability:mayfly] ~ ~ ~ function ability/can_fly"
          ],
          "transitions": [
            {
              "mode": "(1.0)"
            }
          ]
        },
        "can_fly": {
          "on_entry": [
            "/execute @s[tag=!ability:mayfly] ~ ~ ~ function ability/cannot_fly"
          ],
          "transitions": [
            {
              "mode": "(1.0)"
            }
          ]
        }
      }
    }
  }
}
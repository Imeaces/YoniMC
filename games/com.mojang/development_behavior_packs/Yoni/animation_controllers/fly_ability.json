{
  "format_version": "1.10.0",
  "animation_controllers": {
    "controller.animation.fly_ability": {
      "initial_state": "default",
      "states": {
        "default": {
          "transitions": [
            {
              "can_fly": "query.can_fly"
            },
            {
              "cannot_fly": "!query.can_fly"
            }
          ]
        },
        "can_fly": {
          "on_entry": [
            "/execute @s[tag=!ability:mayfly] ~ ~ ~ function ability/cannot_fly"
          ],
          "transitions": [
            {
              "default": "(1.0)"
            }
          ]
        },
        "cannot_fly": {
          "on_entry": [
            "/execute @s[tag=ability:mayfly] ~ ~ ~ function ability/can_fly"
          ],
          "transitions": [
            {
              "default": "(1.0)"
            }
          ]
        }
      }
    }
  }
}
{
  "format_version": "1.10.0",
  "animation_controllers": {
    "controller.animation.yoni.guxi": {
      "initial_state": "loop1",
      "states": {
        "loop1": {
          "on_entry": [ "/execute @s[family=guxi] ~ ~ ~ function yoni/guxi/being" ],
          "transitions": [
            { "loop2": "(1.0)" }
          ]
        },
        "loop2": {
          "on_entry": [ "/execute @s[family=guxi] ~ ~ ~ function yoni/guxi/being" ],
          "transitions": [
            { "loop1": "(1.0)" }
          ]
        }
      }
    },
    "controller.animation.yoni.player.sneaking": {
      "initial_state": "yes",
      "states": {
        "yes": {
          "on_entry": [ "/execute @s[family=yoni] ~ ~ ~ event entity @s yoni:player_is_sneaking" ],
          "transitions": [
            { "no": "!query.is_sneaking" },
          ]
        },
        "no": {
          "on_entry": [ "/execute @s[family=yoni] ~ ~ ~ event entity @s yoni:player_not_sneaking" ],
          "transitions": [
            { "yes": "query.is_sneaking" }
          ]
        }
      }
    }
  }
}
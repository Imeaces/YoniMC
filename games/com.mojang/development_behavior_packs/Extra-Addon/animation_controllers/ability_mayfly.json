//bridge-file-version: #6
{
	"format_version": "1.10.0",
	"animation_controllers": {
		"controller.animation.ability_mayfly": {
			"initial_state": "mode",
			"states": {
				"mode": {
					"transitions": [
						{
							"cannot_fly": "!query.can_fly"
						},
						{
							"can_fly": "query.can_fly"
						}
					]
				},
				"cannot_fly": {
					"on_entry": [
						"variable.ability_mayfly = 0;",
						"/execute @s[tag=ability:mayfly] ~ ~ ~ ability @s mayfly true"
					],
					"transitions": [
						{
							"mode": "(1.0)"
						}
					]
				},
				"can_fly": {
					"on_entry": [
						"variable.ability_mayfly = 1;",
						"/execute @s[tag=!ability:mayfly] ~ ~ ~ ability @s mayfly false"
					],
					"transitions": [
						{
							"mode": "(1.0)"
						}
					]
				}
			}
		}
	}
}
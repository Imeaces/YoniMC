{
    "compilerOptions": {
        "target": "es2022",

        "outDir": "./",
        "sourceMap": false,
        "useDefineForClassFields": true,
        "removeComments": false,
        "esModuleInterop": true,

        "baseUrl": "src",
        "rootDir": "src",
        "module": "es2022",
        "moduleResolution": "node",

        "declaration": true,
        "declarationMap": false,
        "declarationDir": "./@types/yoni-mcscripts-lib",

        "noEmitOnError": false,
        "forceConsistentCasingInFileNames": true,

        "allowUnusedLabels": true,
        "allowUnreachableCode": true,
        "experimentalDecorators": true,
        
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,

        "allowJs": true,
        "checkJs": false,

        "skipLibCheck": true
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.js"
    ],
    "exclude": [
        "node_modules"
    ]
}
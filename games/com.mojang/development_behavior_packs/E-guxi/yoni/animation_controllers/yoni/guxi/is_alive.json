{
  "format_version": "1.10.0",
  "animation_controllers": {
    "controller.animation.yoni.status_alive": {
      "initial_state": "alive",
      "states": {
        "alive": {
          "on_entry": [
            "/function yoni/status/alive/1"
          ],
          "transitions": [
            {
              "dead": "!query.is_alive"
            }
          ]
        },
        "dead": {
          "on_entry": [
            "/function yoni/status/alive/2"
          ],
          "transitions": [
            {
              "alive": "query.is_alive"
            }
          ]
        }
      }
    }
  }
}
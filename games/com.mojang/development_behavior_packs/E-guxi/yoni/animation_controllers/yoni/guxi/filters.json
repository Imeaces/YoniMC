{
  "format_version": "1.10.0",
  "animation_controllers": {
    "controller.animation.yoni.guxi.filters": {
      "initial_state": "default",
      "states": {
        "default": {
          "transitions": [
            {
              "in_lava_true": "query.variant == 1"
            },
            {
              "in_lava_false": "query.variant == 2"
            }
          ]
        },
        "in_lava_true": {
          "on_entry": [
            "/function yoni/filters/in_lava/true"
          ],
          "transitions": [
            {
              "default": "(1.0)"
            }
          ],
          "on_exit": [
            "@s yoni:set_variant_0"
          ]
        },
        "in_lava_false": {
          "on_entry": [
            "/function yoni/filters/in_lava/false"
          ],
          "transitions": [
            {
              "default": "(1.0)"
            }
          ],
          "on_exit": [
            "@s yoni:set_variant_0"
          ]
        }
      }
    }
  }
}
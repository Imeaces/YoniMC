{
  "format_version": "1.16.0",
  "minecraft:entity": {
    "description": {
      "identifier": "minecraft:player",
      "is_spawnable": false,
      "is_summonable": false,
      "is_experimental": false,
      "animations": {
        "guxi": "controller.animation.yoni.guxi",
        "controller.animation.yoni.status.alive": "controller.animation.yoni.status.alive",
        "controller.animation.yoni.guxi.jump": "controller.animation.yoni.guxi.jump",
        "controller.animation.yoni.guxi.moving": "controller.animation.yoni.guxi.moving",
        "controller.animation.yoni.guxi.attack": "controller.animation.yoni.guxi.attack"
      },
      "scripts": {
        "animate": [
          "guxi",
          "controller.animation.yoni.guxi.jump",
          "controller.animation.yoni.status.alive",
          "controller.animation.yoni.guxi.moving",
          "controller.animation.yoni.guxi.attack"
        ]
      }
    },
    "component_groups": {
      "guxi:area_attack": {
        "minecraft:area_attack": {
          "cause": "attack",
          "entity_filter": {
            "subject": "other",
            "test": "is_family",
            "operator": "not",
            "value": "guxi"
          },
          "damage_range": 20,
          "damage_per_tick": 20
        }
      }
    },
    "components": {
      "minecraft:breathable": {
        "breathes_water": true,
        "breathes_solids": true,
        "breathes_lava": true,
        "breathes_air": true,
        "generates_bubbles": false
      },
      "minecraft:type_family": {
        "family": [ "guxi", "evil", "spirit", "yoni" ]
      },
      "minecraft:collision_box": {
        "width": 0.6,
        "height": 1.8
      },
      "minecraft:scale": {
        "value": 0.76
      },
      "minecraft:can_climb": false,
      "minecraft:attack": {
        "damage": 0
      },
      "minecraft:environment_sensor": {
        "triggers": [
          { 
            "filters": {
              "all_of": [
                {
                  "test": "has_mob_effect",
                  "subject": "self",
                  "value": "bad_omen"
                },
                {
                  "test": "is_in_village",
                  "subject": "self",
                  "value": true
                }
              ]
            },
            "event": "minecraft:trigger_raid"
          }
        ]
      },
      "minecraft:nameable": {
        "always_show": false,
        "allow_name_tag_renaming": false
      },
      "minecraft:pushable": {
        "is_pushable": true,
        "is_pushable_by_piston": true
      },
      "minecraft:experience_reward": {
        "on_death": "Math.Min(query.player_level * 7, 100)"
      },
      "minecraft:is_hidden_when_invisible": {
      },
      "minecraft:loot": {
        "table": "loot_tables/empty.json"
      },
      "minecraft:movement": {
        "value": 0.1
      },
      "minecraft:player.saturation": {
        "value": 20
      },
      "minecraft:player.exhaustion": {
        "value": 0,
        "max": 4
      },
      "minecraft:player.level": {
        "value": 0,
        "max": 24791
      },
      "minecraft:player.experience": {
        "value": 0,
        "max": 1
      },
      "minecraft:physics": {
      },
      "minecraft:rideable": {
        "seat_count": 2,
        "family_types": [
          "parrot_tame"
        ],
        "pull_in_entities": true,
        "seats": [
          {
            "position": [ 0.4, -0.2, -0.1 ],
            "min_rider_count": 0,
            "max_rider_count": 0,
            "lock_rider_rotation": 0
          },
          {
            "position": [ -0.4, -0.2, -0.1 ],
            "min_rider_count": 1,
            "max_rider_count": 2,
            "lock_rider_rotation": 0
          }
        ]
      },
      "minecraft:scaffolding_climber": {},
      "minecraft:conditional_bandwidth_optimization": {}
    },
    "events": {
      "yoni:guxi_area_attack": {
        "add": {
          "component_groups": [ "guxi:area_attack" ]
        }
      },
      "yoni:guxi_stop_area_attack": {
        "remove": {
          "component_groups": [ "guxi:area_attack" ]
        }
      }
    }
  }
}

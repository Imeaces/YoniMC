{
  "format_version": "1.10.0",
  "animation_controllers": {
    "controller.animation.yoni.guxi.status.jump": {
      "initial_state": "stand",
      "states": {
        "stand": {
          "on_entry": [
            "/function yoni/guxi/status/jump/0"
          ],
          "transitions": [
            {
              "jump": "query.is_jumping"
            }
          ]
        },
        "jump": {
          "on_entry": [
            "/function yoni/guxi/status/jump/1"
          ],
          "transitions": [
            {
              "stand": "!query.is_jumping"
            }
          ]
        }
      }
    }
  }
}
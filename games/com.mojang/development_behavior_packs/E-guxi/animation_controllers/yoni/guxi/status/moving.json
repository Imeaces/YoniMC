{
  "format_version": "1.10.0",
  "animation_controllers": {
    "controller.animation.yoni.guxi.status.moving": {
      "initial_state": "stat",
      "states": {
        "stat": {
          "on_entry": [
            "/function yoni/guxi/status/moving/0"
          ],
          "transitions": [
            {
              "moving": "query.is_moving"
            }
          ]
        },
        "moving": {
          "on_entry": [
            "/function yoni/guxi/status/moving/1"
          ],
          "transitions": [
            {
              "stat": "!query.is_moving"
            }
          ]
        }
      }
    }
  }
}
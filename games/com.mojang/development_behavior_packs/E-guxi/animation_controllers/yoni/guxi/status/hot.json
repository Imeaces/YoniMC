{
  "format_version": "1.10.0",
  "animation_controllers": {
    "controller.animation.yoni.status.hot": {
      "initial_state": "normal",
      "states": {
        "normal": {
          "on_entry": [
            "/function yoni/guxi/status/hot/0"
          ],
          "transitions": [
            {
              "hot": "!query.is_fire_immune"
            },
            {
              "warm": "query.is_on_fire"
            }
          ]
        },
        "hot": {
          "on_entry": [
            "/function yoni/guxi/status/hot/1"
          ],
          "transitions": [
            {
              "normal": "query.is_fire_immune"
            }
          ]
        },
        "warm": {
          "on_entry": [
            "/function yoni/guxi/status/hot/2"
          ],
          "transitions": [
            {
              "hot": "!query.is_fire_immune"
            },
            {
              "normal": "!query.is_on_fire"
            }
          ]
        }   
      }
    }
  }
}
{
  "format_version": "1.10.0",
  "animation_controllers": {
    "controller.animation.yoni.status.jump": {
      "initial_state": "stand",
      "states": {
        "stand": {
          "on_entry": [
            "/function yoni/status/stand",
            "v.is_jumping = 0;"
          ],
          "transitions": [
            {
              "jump": "query.is_jumping"
            }
          ]
        },
        "jump": {
          "on_entry": [
            "/function yoni/status/jump",
            "v.is_jumping = 1;"
          ],
          "transitions": [
            {
              "stand": "!query.is_jumping"
            }
          ]
        }
      }
    }
  }
}
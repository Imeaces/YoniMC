{
    "format_version": "1.10.0",
    "animation_controllers": {
        "controller.animation.entity.player.yonimc.species.guxi": {
            //while (true)
            //    run func
            "initial_state": "init",
            "states": {
                "init": {
                    "transitions": [
                        { "init_spawn_wait1": "(query.scoreboard('species') == 2695 && !query.has_any_family('yoni_guxi'))" },
                        { "init_drop": "(query.scoreboard('species') != 2695 && query.has_any_family('yoni_guxi'))" },
                        { "loop0": "query.has_any_family('yoni_guxi')"}
                    ],
                    "on_entry": [
                    ]
                },
                "init_spawn_wait1": {
                    "transitions": [
                        { "init_spawn_wait2": "(1.0)" }
                    ]
                },
                "init_spawn_wait2": {
                    "transitions": [
                        { "init_spawn_start": "(1.0)" }
                    ]
                },
                "init_spawn_start": {
                    "transitions": [
                        { "init": "(1.0)" }
                    ],
                    "on_entry": [
                        "@s remove:all",
                        "@s append:yonimc_as_guxi",
                        "/scoreboard objectives add yoni:guxi dummy",
                        "/scoreboard players set @s yoni:guxi 0",
                        "/say species as guxi"
                    ]
                },
                "init_drop": {
                    "transitions": [
                        { "init": "(1.0)" }
                    ],
                    "on_entry": [
                        "@s remove:all",
                        "clear @s yonimc:energy 9",
                        "/say species drop guxi"
                    ]
                },
                "loop0": {
                    "transitions": [
                        { "loop1": "query.scoreboard('species') == 2695" },
                        { "init": "(1.0)" }
                    ],
                    "on_entry": [
                        "/function yonimc/species/guxi/player",
                        "/function yonimc/species/guxi/player_t2"
                    ]
                },
                "loop1": {
                    "transitions": [
                        { "loop0": "query.scoreboard('species') == 2695" },
                        { "init": "(1.0)" }
                    ],
                    "on_entry": [
                        "/function yonimc/species/guxi/player",
                        "/function yonimc/species/guxi/player_t2"
                    ]
                }
            }
        }
    }
}
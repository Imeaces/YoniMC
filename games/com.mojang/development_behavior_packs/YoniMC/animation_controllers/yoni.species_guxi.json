{
  "format_version": "1.10.0",
  "animation_controllers": {
    "controller.animation.yoni.species.guxi": {
      // 检测species是否等于2695，如果是，循环执行`guxi play`与`guxi thought`
      "initial_state": "reset",
      "states": {
        "reset": {
          "transitions": [
            { "loop1": "query.scoreboard('species') == 2695" }
          ],
          "on_exit": [ "/function yoni/guxi/play", "/function yoni/mind/reload" ]
        },
        "loop1": {
          "transitions": [
            { "loop2": "query.scoreboard('species') == 2695" }
          ],
          "on_exit": [ "/function yoni/guxi/play", "/function yoni/guxi/thought/play" ]
        },
        "loop2": {
          "transitions": [
            { "loop1": "query.scoreboard('species') == 2695" }
          ],
          "on_exit": [ "/function yoni/guxi/play", "/function yoni/guxi/thought/play" ]
        }
      }
    }
  }
}
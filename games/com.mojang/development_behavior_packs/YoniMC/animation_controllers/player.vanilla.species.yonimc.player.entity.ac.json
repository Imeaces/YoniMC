{
    "format_version": "1.10.0",
    "animation_controllers": {
        "controller.animation.entity.player.yonimc.species.vanilla.player": {
            //while (true)
            //    run func
            "initial_state": "init",
            "states": {
                "init": {
                    "transitions": [
                        { "init_spawn_wait1": "(query.scoreboard('species') == 42 && query.variant != 42)" },
                        { "init_drop": "(query.scoreboard('species') != 42 && query.variant == 42)" },
                        { "loop0": "query.variant == 42"}
                    ],
                    "on_entry": [
                    ]
                },
                "init_spawn_wait1": {
                    "transitions": [
                        { "init_spawn_wait2": "(1.0)" }
                    ]
                },
                "init_spawn_wait2": {
                    "transitions": [
                        { "init_spawn_start": "(1.0)" }
                    ]
                },
                "init_spawn_start": {
                    "transitions": [
                        { "init": "(1.0)" }
                    ],
                    "on_entry": [
                        "@s remove:all",
                        "@s append:minecraft_as_player",
                        "@s setvalue:42:variant",
                        "/say species as player"
                    ]
                },
                "init_drop": {
                    "transitions": [
                        { "init": "(1.0)" }
                    ],
                    "on_entry": [
                        "@s remove:all",
                        "@s setvalue:0:variant",
                        "/say species drop player"
                    ]
                },
                "loop0": {
                    "transitions": [
                        { "loop1": "query.scoreboard('species') == 42" },
                        { "init": "(1.0)" }
                    ],
                    "on_entry": [
                        "/function yonimc/species/vanilla/player"
                    ]
                },
                "loop1": {
                    "transitions": [
                        { "loop0": "query.scoreboard('species') == 42" },
                        { "init": "(1.0)" }
                    ],
                    "on_entry": [
                        "/function yonimc/species/vanilla/player"
                    ]
                }
            }
        }
    }
}
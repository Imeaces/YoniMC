{
  "format_version": "1.10.0",
  "animation_controllers": {
    "controller.animation.yoni.species.guxi": {
      // 检测species是否等于2695，如果是，循环执行`guxi play`与`guxi thought`
      "initial_state": "default",
      "states": {
        "default": {
          "transitions": [
            { "stage_loop": "(v.species ?? 0) == 2695" },
            { "stage_init": "(1.0)" }
          ]
        },
        "stage_init": {
          "transitions": [
            { "init_being": "(v.species ?? 0) == 2695" }
          ]
        },
        "stage_loop": {
          "transitions": [
            { "play_loop": "(v.species ?? 0) == 2695" },
            { "play_perish": "(1.0)" }
          ],
          "on_entry": [ "/function yoni/guxi/event_reload" ]
        },
        "init_being": {
          "transitions": [
            { "play_being": "(v.species ?? 0) == 2695" },
            { "stage_init": "(1.0)" }
          ]
        },
        "play_being": {
          "transitions": [
            { "play_loop": "(v.species ?? 0) == 2695" },
            { "play_perish": "(1.0)" }
          ],
          "on_entry": [ "/function yoni/guxi/species/being" ]
        },
        "play_perish": {
          "transitions": [
            { "stage_init": "(1.0)" }
          ],
          "on_entry": [ "/function yoni/guxi/species/perish" ]
        },
        "play_loop": {
          "transitions": [
            { "falled": "(v.species ?? 0) == 2695 && (v.funcid ?? 0) == 1" },
            { "disorder": "(v.species ?? 0) == 2695 && (v.funcid ?? 0) == 5" },
            { "fetch_energy": "(v.species ?? 0) == 2695 && (v.funcid ?? 0) == 2" },
            { "adding_energy": "(v.species ?? 0) == 2695 && (v.funcid ?? 0) == 3" },
            { "drop_faster": "(v.species ?? 0) == 2695 && (v.funcid ?? 0) == 4" },
            { "play_loop1": "(v.species ?? 0) == 2695" },
            { "play_perish": "(1.0)" }
          ],
          "on_entry": [ "/function yoni/guxi/play" ]
        },
        "play_loop1": {
          "transitions": [
            { "falled": "(v.species ?? 0) == 2695 && (v.funcid ?? 0) == 1" },
            { "disorder": "(v.species ?? 0) == 2695 && (v.funcid ?? 0) == 5" },
            { "fetch_energy": "(v.species ?? 0) == 2695 && (v.funcid ?? 0) == 2" },
            { "adding_energy": "(v.species ?? 0) == 2695 && (v.funcid ?? 0) == 3" },
            { "drop_faster": "(v.species ?? 0) == 2695 && (v.funcid ?? 0) == 4" },
            { "play_loop": "(v.species ?? 0) == 2695" },
            { "play_perish": "(1.0)" }
          ],
          "on_entry": [ "/function yoni/guxi/play" ]
        },
        "falled": {
          "transitions": [
            { "falled": "(v.species ?? 0) == 2695 && (v.funcid ?? 0) == 1" },
            { "disorder": "(v.species ?? 0) == 2695 && (v.funcid ?? 0) == 5" },
            { "fetch_energy": "(v.species ?? 0) == 2695 && (v.funcid ?? 0) == 2" },
            { "adding_energy": "(v.species ?? 0) == 2695 && (v.funcid ?? 0) == 3" },
            { "drop_faster": "(v.species ?? 0) == 2695 && (v.funcid ?? 0) == 4" },
            { "play_loop": "(v.species ?? 0) == 2695" },
            { "play_perish": "(1.0)" }
          ],
          "on_entry": [
            "/tell @s falled",
            "/tag @s add guxi:event_falled",
            "/function yoni/guxi/play",
            "/tag @s remove guxi:event_falled"
          ]
        },
        "disorder": {
          "transitions": [
            { "falled": "(v.species ?? 0) == 2695 && (v.funcid ?? 0) == 1" },
            { "disorder": "(v.species ?? 0) == 2695 && (v.funcid ?? 0) == 5" },
            { "fetch_energy": "(v.species ?? 0) == 2695 && (v.funcid ?? 0) == 2" },
            { "adding_energy": "(v.species ?? 0) == 2695 && (v.funcid ?? 0) == 3" },
            { "drop_faster": "(v.species ?? 0) == 2695 && (v.funcid ?? 0) == 4" },
            { "play_loop": "(v.species ?? 0) == 2695" },
            { "play_perish": "(1.0)" }
          ],
          "on_entry": [
            "/tell @s disorder",
            "/tag @s add guxi:event_disorder",
            "/function yoni/guxi/play",
            "/tag @s remove guxi:event_disorder"
          ]
        },
        "fetch_energy": {
          "transitions": [
            { "falled": "(v.species ?? 0) == 2695 && (v.funcid ?? 0) == 1" },
            { "disorder": "(v.species ?? 0) == 2695 && (v.funcid ?? 0) == 5" },
            { "fetch_energy": "(v.species ?? 0) == 2695 && (v.funcid ?? 0) == 2" },
            { "adding_energy": "(v.species ?? 0) == 2695 && (v.funcid ?? 0) == 3" },
            { "drop_faster": "(v.species ?? 0) == 2695 && (v.funcid ?? 0) == 4" },
            { "play_loop": "(v.species ?? 0) == 2695" },
            { "play_perish": "(1.0)" }
          ],
          "on_entry": [
            "/tell @s fetch_energy",
            "/tag @s add guxi:event_fetch_energy",
            "/function yoni/guxi/play",
            "/tag @s remove guxi:event_fetch_energy"
          ]
        },
        "adding_energy": {
          "transitions": [
            { "falled": "(v.species ?? 0) == 2695 && (v.funcid ?? 0) == 1" },
            { "disorder": "(v.species ?? 0) == 2695 && (v.funcid ?? 0) == 5" },
            { "fetch_energy": "(v.species ?? 0) == 2695 && (v.funcid ?? 0) == 2" },
            { "adding_energy": "(v.species ?? 0) == 2695 && (v.funcid ?? 0) == 3" },
            { "drop_faster": "(v.species ?? 0) == 2695 && (v.funcid ?? 0) == 4" },
            { "play_loop": "(v.species ?? 0) == 2695" },
            { "play_perish": "(1.0)" }
          ],
          "on_entry": [
            "/tell @s adding_energy",
            "/tag @s add guxi:event_adding_energy",
            "/function yoni/guxi/play",
            "/tag @s remove guxi:event_adding_energy"
          ]
        },
        "drop_faster": {
          "transitions": [
            { "falled": "(v.species ?? 0) == 2695 && (v.funcid ?? 0) == 1" },
            { "disorder": "(v.species ?? 0) == 2695 && (v.funcid ?? 0) == 5" },
            { "fetch_energy": "(v.species ?? 0) == 2695 && (v.funcid ?? 0) == 2" },
            { "adding_energy": "(v.species ?? 0) == 2695 && (v.funcid ?? 0) == 3" },
            { "drop_faster": "(v.species ?? 0) == 2695 && (v.funcid ?? 0) == 4" },
            { "play_loop": "(v.species ?? 0) == 2695" },
            { "play_perish": "(1.0)" }
          ],
          "on_entry": [
            "/tell @s drop_faster",
            "/tag @s add guxi:event_drop_faster",
            "/function yoni/guxi/play",
            "/tag @s remove guxi:event_drop_faster"
          ]
        }
      }
    }
  }
}
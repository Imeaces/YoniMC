{
  "format_version": "1.10.0",
  "animation_controllers": {
    "controller.animation.yoni_guxi": {
      "initial_state": "default",
      "states": {
        "default": {
          "transitions": [
            {
              "guxi": "query.has_any_family('guxi')"
            }
          ],
          "on_exit": [
            "/function yoni/guxi/init"
          ]
        },
        "guxi": {
          "transitions": [
            {
              "loop": "query.has_any_family('guxi')"
            },
            {
              "default": "(1.0)"
            }
          ],
          "on_entry": [
            "/function yoni/guxi"
          ]
        },
        "loop": {
          "transitions": [
            {
              "damage": "query.skin_id == 1"
            },
            {
              "moving": "query.is_moving"
            },
            {
              "day_consume": "v.day_new != ( v.day ?? v.day_new ) && { v.day = v.day_new; return 1 }; "
            },
            {
              "default": "!query.has_any_family('guxi')"
            },
            {
              "guxi": "(1.0)"
            }
          ],
          "on_entry": [
            "/function yoni/guxi",
            "v.day_new = query.day;"
          ]
        },
        "moving": {
          "transitions": [
            {
              "default": "!query.has_any_family('guxi')"
            },
            {
              "loop": "(1.0)"
            }
          ],
          "on_entry": [
            "/function yoni/guxi/moving"
          ]
        },
        "damage": {
          "transitions": [
            {
              "default": "!query.has_any_family('guxi')"
            },
            {
              "loop": "(1.0)"
            }
          ],
          "on_entry": [
            "@s yoni:reset",
            "/say damage",
            "/function yoni/guxi/damage"
          ]
        },
        "day_consume": {
          "transitions": [
            {
              "default": "!query.has_any_family('guxi')"
            },
            {
              "loop": "(1.0)"
            }
          ],
          "on_entry": [
            "/function yoni/guxi/day_consume"
          ]
        }
      }
    }
  }
}
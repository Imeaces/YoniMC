{
  "format_version": "1.10.0",
  "animation_controllers": {
    "controller.animation.yoni.status.moving": {
      "initial_state": "is_static",
      "states": {
        "is_static": {
          "transitions": [
            {
              "still_static": "!query.is_moving"
            },
            {
              "is_moving": "query.is_moving"
            }
          ]
        },
        "still_static": {
          "transitions": [
            {
              "is_static": "!query.is_moving"
            },
            {
              "is_moving": "query.is_moving"
            }
          ],
          "on_exit": [
            "/function yoni/status/moving/static"
          ]
        },
        "is_moving": {
          "transitions": [
            {
              "is_static": "!query.is_moving"
            }
          ],
          "on_entry": [
            "/function yoni/status/moving/moving"
          ]
        }
      }
    }
  }
}
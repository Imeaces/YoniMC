
{
  "format_version": "1.10.0",
  "animation_controllers": {
    "controller.animation.yoni.status.sleep": {
      "initial_state": "default",
      "states": {
        "default": {
          "transitions": [
            {
              "is_sleeping": "query.is_sleeping"
            }
          ],
          "on_entry": [
            "/function yoni/status/sleep/false"
          ]
        },
        "is_sleeping": {
          "transitions": [
            {
              "default": "!query.is_sleeping"
            }
          ],
          "on_entry": [
            "/function yoni/status/sleep/true"
          ]
        }
      }
    }
  }
}
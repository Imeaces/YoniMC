{
  "format_version": "1.10.0",
  "animation_controllers": {
    "controller.animation.entity.status.guxi.health_state": {
      "initial_state": "while",
      "states": {
        "while": {
            //while (true)
          "transitions": [
            { // if (current_energy <= val.need_amount_of_energy_to_keep_stable) 
              //     goto lower_than_stable
                "low": "query.scoreboard('guxi:sp_energy') == 10000" },
            { // else goto higher_than_stable
                "enough": "query.scoreboard('guxi:sp_energy') == 10003" },
            { // else goto higher_than_stable
                "plenty": "query.scoreboard('guxi:sp_energy') == 10077" }
          ]
        },
        "lower": {
          "transitions": [
            // goto while
            { "while": "query.scoreboard('guxi:sp_energy') != 10000" }
          ],
          // trigger event 
          "on_entry": [
              "@s append:guxi_in_low_energy"
          ]
        },
        "enough": {
          "transitions": [
            // goto while
            { "while": "query.scoreboard('guxi:sp_energy') == 10000" }
          ],
          // trigger event 
          "on_entry": [
              "@s append:guxi_in_enough_energy"
          ]
        },
        "plenty": {
          "transitions": [
            // goto while
            { "while": "query.scoreboard('guxi:sp_energy') == 10000" }
          ],
          // trigger event 
          "on_entry": [
              "@s append:guxi_in_enough_energy"
          ]
        }
      }
    }
  }
}
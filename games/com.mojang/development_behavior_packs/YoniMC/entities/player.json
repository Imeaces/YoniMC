{
  "format_version": "1.18.10",
  "minecraft:entity": {
    "description": {
      "identifier": "minecraft:player",
      "is_spawnable": false,
      "is_summonable": false,
      "is_experimental": false,
      "animations": { // 定义可以运行的动画控制器
        // 用于yoni物种系统的动画控制器
        "species": "controller.animation.yoni.species",
        "species.yoni_guxi": "controller.animation.yoni.species.guxi",
        // 实体状态
        "entity.status_alive": "controller.animation.entity.status.alive",
        // 获取生命值
        "op.health0": "controller.animation.entity.health_0",
        "op.health1": "controller.animation.entity.health_1",
        "op.health2": "controller.animation.entity.health_2",
        "op.health3": "controller.animation.entity.health_3",
        "op.health4": "controller.animation.entity.health_4",
        "op.health5": "controller.animation.entity.health_5",
        "op.health6": "controller.animation.entity.health_6"
      },
      "scripts": {
        "animate": [ //运行动画控制器
          "species",
          "species.yoni_guxi",
          "entity.status_alive",
          "op.health0",
          "op.health1",
          "op.health2",
          "op.health3",
          "op.health4",
          "op.health5",
          "op.health6"
        ]
      }
    },
    
    "events": {
      "minecraft:gain_bad_omen": {
        "add": {
          "component_groups": [
            "minecraft:add_bad_omen"
          ]
        }
      },
      "minecraft:clear_add_bad_omen": {
        "remove": {
          "component_groups": [
            "minecraft:add_bad_omen"
          ]
        },
        "add": {
          "component_groups": [
            "minecraft:clear_bad_omen_spell_effect"
          ]
        }
      },
      "minecraft:trigger_raid": {
        "add": {
          "component_groups": [ "minecraft:raid_trigger" ]
        }
      },
      "minecraft:remove_raid_trigger": {
        "remove": {
          "component_groups": [ "minecraft:raid_trigger" ]
        }
      },
      "minecraft:being_player": {
        "sequence": [
          { "add": { "component_groups": [ "minecraft:species_player" ] } }
        ]
      },
      "minecraft:perish_player": {
        "sequence": [
          { "remove": { "component_groups": [ "minecraft:species_player" ] } }
        ]
      },
      "yoni:being_guxi": {
        "sequence": [
          { "add": { "component_groups": [ "yoni:species_guxi" ] } }
        ]
      },
      "yoni:perish_guxi": {
        "sequence": [
          { "remove": { "component_groups": [ "yoni:species_guxi" ] } },
          { "remove": { "component_groups": [ "yoni:guxi_resistance_0" ] } },
          { "remove": { "component_groups": [ "yoni:guxi_resistance_1" ] } },
          { "remove": { "component_groups": [ "yoni:guxi_resistance_2" ] } },
          { "remove": { "component_groups": [ "yoni:guxi_resistance_3" ] } },
          { "remove": { "component_groups": [ "yoni:guxi_resistance_4" ] } }
        ]
      },
      "guxi:resistance_0": {
        "add": { "component_groups": [ "guxi:resistance_0" ] }
      },
      "guxi:resistance_1": {
        "add": { "component_groups": [ "guxi:resistance_1" ] }
      },
      "guxi:resistance_2": {
        "add": { "component_groups": [ "guxi:resistance_2" ] }
      },
      "guxi:resistance_3": {
        "add": { "component_groups": [ "guxi:resistance_3" ] }
      },
      "guxi:resistance_4": {
        "add": { "component_groups": [ "guxi:resistance_4" ] }
      }
    },

    "component_groups": {
      "guxi:resistance_0": {
      //未使用能量附加的盾时的防御
        "minecraft:damage_sensor": {
          "triggers": [
            //具有动能的物体，会对咕西造成巨大的伤害
            { "cause": "anvil",             "damage_multiplier": 4 },
            { "cause": "stalactite",        "damage_multiplier": 2 },  //钟乳石 stalactite
            { "cause": "falling_block",     "damage_multiplier": 1.5 },
            { "cause": "projectile",        "damage_multiplier": 1.5 },
            //当撞上墙或者坠落在石笋上时，巨大的冲击力会对咕西造成较大的伤害
            { "cause": "fly_into_wall",     "damage_multiplier": 3 },
            { "cause": "stalagmite",        "damage_multiplier": 1.5 }, //石笋 stalagmite
            { "cause": "fall",              "damage_multiplier": 1 },
            //爆炸带来剧烈的能量变化，会扰动咕西自身的能量
            { "cause": "block_explosion",   "damage_multiplier": 2 },
            { "cause": "entity_explosion",  "damage_multiplier": 2 },
            { "cause": "fireworks",         "damage_multiplier": 1 },
            //咕西本身较为脆弱，普通的攻击也可能会带来较大的伤害
            { "cause": "entity_attack",     "damage_multiplier": 1.5 },
            //由于在刺穿时自身会进行修复，缓慢穿刺带来的伤害较小
            { "cause": "contact",           "damage_multiplier": 0.5 },
            //咕西本身为能量生物，故不会受到下列伤害
            { "cause": "suffocation",  "deals_damage": false },
            { "cause": "drowning",     "deals_damage": false },
            { "cause": "starve",       "deals_damage": false },
            { "cause": "fire_tick",    "deals_damage": false },
            { "cause": "magma",        "deals_damage": false },
            { "cause": "piston",       "deals_damage": false },
            { "cause": "lightning",    "deals_damage": false },
            { "cause": "freezing",     "deals_damage": false },
            { "cause": "fire",         "deals_damage": false },
            { "cause": "lava",         "deals_damage": false }
          ]
        }
      },

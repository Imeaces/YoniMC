{
  "format_version": "1.10.0",
  "animation_controllers": {
    "controller.animation.guxi_loop": {
      "initial_state": "default",
      "states": {
        "default": {
          "on_entry": [
            "/function yoni/guxi/loop"
          ],
          "transitions": [
            {
              "loop": "(1.0)"
            }
          ]
        },
        "loop": {
          "on_entry": [
            "/function yoni/guxi/loop"
          ],
         "transitions": [
            {
              "default": "(1.0)"
            }
          ]
        }   
      }
    },
    "controller.animation.guxi_heights": {
      "initial_state": "default",
      "states": {
      /*
      query.all_animations_finished
      query.mark_variant
      "guxi_underground"
      "guxi_underground_power"
      "guxi_aboveground"
      */
        "default": {
          "transitions": [
            {
              "guxi_underground_power": "query.mark_variant == 2"
            },
            {
              "guxi_underground": "query.mark_variant == 1"
            },
            {
              "guxi_aboveground": "query.mark_variant == 4"
            },
            {
              "guxi_aboveground_light": "query.mark_variant == 3"
            }
          ]
        },
        "guxi_underground_power": {
          "on_entry": [
            "/say mode: 2"
          ],
          "animations": [
            "guxi_underground_power"
          ],
          "transitions": [
            {
              "underwater_default": "query.mark_variant == 10"
            },
            {
              "default": "query.mark_variant != 2"
            }
          ],
          "on_exit": [
            "v.status = 2;"
          ]
        },
        "guxi_underground": {
          "on_entry": [
            "/say mode: 1"
          ],
          "animations": [
            "guxi_underground"
          ],
          "transitions": [
            {
              "underwater_default": "query.mark_variant == 10"
            },
            {
              "default": "query.mark_variant != 1"
            }
          ],
          "on_exit": [
            "v.status = 1;"
          ]
        },
        "guxi_aboveground": {
          "on_entry": [
            "/say mode: 4"
          ],
          "animations": [
            "guxi_aboveground"
          ],
          "transitions": [
            {
              "underwater_default": "query.mark_variant == 10"
            },
            {
              "default": "query.mark_variant != 4"
            }
          ],
          "on_exit": [
            "v.status = 4;"
          ]
        },
        "guxi_aboveground_light": {
          "on_entry": [
            "/say mode: 3"
          ],
          "animations": [
            "guxi_aboveground_light"
          ],
          "transitions": [
            {
              "underwater_default": "query.mark_variant == 10"
            },
            {
              "default": "query.mark_variant != 3"
            }
          ],
          "on_exit": [
            "v.status = 3;"
          ]
        },

        "underwater_default": {
          "transitions": [
            {
              "u_guxi_underground_power": "v.status == 2"
            },
            {
              "u_guxi_underground": "v.status == 1"
            },
            {
              "u_guxi_aboveground": "v.status == 4"
            },
            {
              "u_guxi_aboveground_light": "v.status == 3"
            }
          ]
        },
        
        "u_guxi_underground_power": {
          "on_entry": [
            "/say mode: 12"
          ],
          "animations": [
            "guxi_underground_power"
          ],
          "transitions": [
            {
              "default": "query.mark_variant != 10"
            }
          ]
        },
        "u_guxi_underground": {
          "on_entry": [
            "/say mode: 11"
          ],
          "animations": [
            "guxi_underground"
          ],
          "transitions": [
            {
              "default": "query.mark_variant != 10"
            }
          ]
        },
        "u_guxi_aboveground": {
          "on_entry": [
            "/say mode: 10"
          ],
          "animations": [
            "guxi_aboveground"
          ],
          "transitions": [
            {
              "default": "query.mark_variant != 10"
            }
          ]
        },
        "u_guxi_aboveground_light": {
          "on_entry": [
            "/say mode: 13"
          ],
          "animations": [
            "guxi_aboveground_light"
          ],
          "transitions": [
            {
              "default": "query.mark_variant != 10"
            }
          ]
        }

      }
    }
  }
}
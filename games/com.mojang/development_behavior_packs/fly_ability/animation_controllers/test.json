{
  "format_version": "1.10.0",
  "animation_controllers": {
    "controller.animation.fly_ability": {
      "initial_state": "default",
      "states": {
        "default": {
          "transitions": [
            {
              "can_fly": "query.can_fly"
            },
            {
              "cannot_fly": "!query.can_fly"
            }
          ]
        },
        "can_fly": {
          "on_entry": [
            "/ability @s[tag=!ability:mayfly] mayfly false"
          ],
          "transitions": [
            {
              "default": "(1.0)"
            }
          ]
        },
        "cannot_fly": {
          "on_entry": [
            "/ability @s[tag=ability:mayfly] mayfly true"
          ],
          "transitions": [
            {
              "default": "(1.0)"
            }
          ]
        }
      }
    }
  }
}
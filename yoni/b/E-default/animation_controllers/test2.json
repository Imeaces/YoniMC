{
  "format_version": "1.10.0",
  "animation_controllers": {
    "controller.animation.test": {
      "initial_state": "default",
      "states": {
        "default": {
          "on_entry": [
            "/say 开始测试:E-molang_query.target"
          ],
          "transitions": [
            {
              "loop": "query.target != ''"
            }
          ]
        },
        "loop": {
          "on_entry": [
            "/say 检测在到query.target返回不为空"
          ],
          "transitions": [
            {
              "default": "!query.is_alive"
            }
          ]
        }
      }
    }
  }
}
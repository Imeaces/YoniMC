{
  "format_version": "1.16.0",
  "minecraft:entity": {
    "description": {
      "identifier": "minecraft:player",
      "is_spawnable": false, "is_summonable": false, "is_experimental": false,
      "animations": {
        "guxi": "controller.animation.yoni.guxi",
        "guxi_skin_id": "controller.animation.yoni.guxi.skin_id",

        //获取生命值的控制器（0-40的值可以在一刻之内获取）
        "health0": "controller.animation.yoni.health.0",
        "health1": "controller.animation.yoni.health.1",
        "health2": "controller.animation.yoni.health.2",
        "health3": "controller.animation.yoni.health.3",
        "health4": "controller.animation.yoni.health.4",
        "health5": "controller.animation.yoni.health.5",
        "health6": "controller.animation.yoni.health.6"
        
      },
      "scripts": {
        "animate": [
          // "guxi",
          "guxi_skin_id",
          
          //运行获取生命值的控制器
          "health0",
          "health1",
          "health2",
          "health3",
          "health4",
          "health5",
          "health6"
        ]
      }
    },
    
    "events": {
      "yoni:reset_skin_id": { "add": { "component_groups": [ "yoni:skin_id_0" ] } },
      "guxi:alive": { "add": { "component_groups": [ "guxi:alive" ] } },
      "guxi:paralysis": { "add": { "component_groups": [ "guxi:paralysis" ] } },
      "guxi:dying": { "add": { "component_groups": [ "guxi:dying" ] } }
    },

    "component_groups": {
      "yoni:skin_id_0": { "minecraft:skin_id": { "value": 0 } },
      "guxi:alive": { "minecraft:health": { "max": 60, "value": 60, "min": 1 } },
      "guxi:paralysis": { "minecraft:health": { "max": 21, "value": 21, "min": 1 } },
      "guxi:dying": { "minecraft:health": { "max": 1, "value": 1, "min": 0 }, "minecraft:skin_id": { "value": 101 } }
    },

    "components": {
      "minecraft:hurt_on_condition": {
        "damage_conditions": [
          {
            "filters": {
              "test": "is_skin_id",
              "value": 101
            },
            "cause": "none",
            "damage_per_tick": 1
          }
        ]
      },
      "minecraft:damage_sensor": {
        "triggers": [
          {
            "cause": "anvil", //铁砧
            "damage_multiplier": 100
          },
          {
            "cause": "stalactite", //钟乳石 stalactite
            "damage_multiplier": 50
          },
          {
            "cause": "stalagmite", //石笋 stalagmite
            "damage_modifier": 8
          },
          {
            "cause": "fly_into_wall",
            "damage_modifier": 6
          },
          {
            "cause": "falling_block",
            "damage_multiplier": 5
          },
          {
            "cause": "fall",
            "damage_modifier": 4
          },
          {
            "cause": "suffocation",
            "deals_damage": false
          },
          {
            "cause": "drowning",
            "deals_damage": false
          },
          {
            "cause": "contact",
            "deals_damage": false
          },
          {
            "cause": "starve",
            "deals_damage": false
          },          
          {
            "cause": "fire_tick",
            "deals_damage": false
          },
          {
            "cause": "magma",
            "deals_damage": false
          },
          {
            "cause": "freezing",
            "deals_damage": false
          },
          {
            "cause": "lightning",
            "deals_damage": false
          },
          {
            "cause": "freezing",
            "deals_damage": false
          },
          {
            "cause": "fire",
            "deals_damage": false
          },
          {
            "cause": "lava",
            "deals_damage": false
          },
          {
            "cause": "magma",
            "deals_damage": false
          },
          {
            "cause": "block_explosion",
            "damage_modifier": -4
          },
          {
            "cause": "entity_explosion",
            "damage_modifier": -4
          }
        ]
      },

      "minecraft:environment_sensor": {
        "triggers": [
        ]
      },

      ///////////////////////////////////////////
      //如果没有必要的话，下边的这些是不会修改的
      ///////////////////////////////////////////

      "minecraft:type_family": {
        // "family": [ "guxi", "yoni", "mob" ]
        "family": [ "player" ]
      },
      "minecraft:loot": { "table": "loot_tables/empty.json" },
      "minecraft:insomnia": { "days_until_insomnia": 3 },
      "minecraft:collision_box": { "width": 0.6, "height": 1.8 },
      "minecraft:scale": { "value": 0.76 },
      "minecraft:movement": { "value": 0.1 },
      "minecraft:attack": { "damage": 0 },
      "minecraft:nameable": { "always_show": false, "allow_name_tag_renaming": false },
      "minecraft:physics": {},
      "minecraft:pushable": { "is_pushable": true, "is_pushable_by_piston": true },
      "minecraft:breathable": {
        "breathes_air": true,
        "breathes_lava": true,
        "breathes_solids": true,
        "breathes_water": true,
        "generates_bubbles": false
      },
      "minecraft:is_hidden_when_invisible": {},
      "minecraft:conditional_bandwidth_optimization": {},

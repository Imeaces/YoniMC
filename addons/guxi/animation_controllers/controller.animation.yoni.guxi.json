{
  "format_version": "1.10.0",
  "animation_controllers": {
    "controller.animation.yoni.guxi": {
      "initial_state": "loop1",
      "states": {
        "loop1": {
          "on_entry": [ "/function yoni/guxi/survive" ],
          "transitions": [ { "loop2": "(1.0)" } ]
        },
        "loop2": {
          "on_entry": [ "/function yoni/guxi/survive" ],
          "transitions": [ { "loop1": "(1.0)" } ]
        }
      }
    },
    "controller.animation.yoni.guxi.mark_variant": {
      "initial_state": "mv0",
      "states": {
        "mv0": { //default
          "transitions": [
            { "mv1": "query.mark_variant == 1" } //damage
          ],
          "on_exit": [ "@s yoni:reset_mark_variant" ]
        },
        "mv1": { //damage
          "on_entry": [ "/tag @s add guxi:damage" ],
          "transitions": [ { "mv0": "(1.0)" } ] //default
        }
      }
    },
    "controller.animation.yoni.guxi.skin_id": {
      "initial_state": "default",
      "states": {
        "default": {
          "transitions": [
            { "dying": "query.skin_id == 100" },
            { "paralysis": "query.skin_id != 101 && query.scoreboard('energys') == 1" },
            { "stable": "query.skin_id != 102 && query.scoreboard('energys') > 1" }
          ],
          "on_exit": [ "@s yoni:reset_skin_id" ]
        },
        "dying": {
          "transitions": [ { "default": "(1.0)" } ]
        },
        "paralysis": {
          "on_entry": [ "@s guxi:paralysis" ],
          "transitions": [ { "default": "(1.0)" } ]
        },
        "stable": {
          "on_entry": [ "@s guxi:alive" ],
          "transitions": [ { "default": "(1.0)" } ]
        }
      }
    },
    "controller.animation.yoni.guxi.alive": {
      "initial_state": "alive",
      "states": {
        "alive": {
          "on_entry": [ "/scoreboard objectives add alive dummy", "/scoreboard players set @s alive 1" ],
          "transitions": [
            { "die": "!query.is_alive" },
            { "alive1": "query.scoreboard('alive') != 1" }
          ]
        },
        "alive1": {
          "on_entry": [ "/scoreboard objectives add alive dummy", "/scoreboard players set @s alive 1" ],
          "transitions": [
            { "die": "!query.is_alive" },
            { "alive": "query.scoreboard('alive') != 1" }
          ]
        },
        "die": {
          "on_entry": [ "/scoreboard objectives add alive dummy", "/scoreboard players set @s alive -1" ],
          "transitions": [
            { "alive": "query.is_alive" },
            { "die1": "query.scoreboard('alive') != -1" }
          ]
        },
        "die1": {
          "on_entry": [ "/scoreboard objectives add alive dummy", "/scoreboard players set @s alive -1" ],
          "transitions": [
            { "alive": "query.is_alive" },
            { "die": "query.scoreboard('alive') != -1" }
          ]
        }
      }
    }
  }
}